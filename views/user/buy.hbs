<div id="buynow">

    <div class="row">
        <div style="margin: auto; margin-top: 5em" class="card col-xs-8 col-sm-8 col-md-8">
            <div class="card-block">

                <!--Header-->
                <div class="form-header  blue">
                    <h3><i class="fa fa-lock"></i> Billing Details:</h3>
                </div>

                <div>
                    <h3>You are purchasing {{listing.title}} for ${{listing.price}}.00
                    with a 3% processing fee.</h3>
                    {{#if hasErrors}}
                        <div class="alert alert-danger">
                            {{# each messages }}
                                <p>{{this}}</p>
                            {{/each}}
                        </div>
                    {{/if}}
                    <form action="/buynow/{{listing._id}}" method="post">
                        <div class="form-group">
                            <input type="text" id="firstname" name="firstname" class="form-control" placeholder="First name">
                        </div>
                        <div class="form-group">
                            <input type="text" id="lastname" name="lastname" class="form-control" placeholder="Last name">
                        </div>
                        <div class="form-group">
                            <input type="text" id="username" name="username" class="form-control" placeholder="Street Address">
                        </div>
                        <div class="form-group">
                            <input type="text" id="city" name="city" class="form-control" placeholder="City">
                        </div>
                        <div class="form-group">
                            <input style="display: inline !important" class="col-md-5 col-xs-12 col-sm-4 form-control" type="text" id="state" name="state" placeholder="State" maxlength="2">
                        </div>
                        <div class="form-group">
                            <input style="display: inline !important" class="col-md-5 col-xs-12 col-sm-4 form-control" type="text" id="zip" name="zip" placeholder="Zip code" maxlength="5">
                        </div>
                        <input type="hidden" name="_id" value="{{listing._id}}">
                        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                        <button class="btn btn-primary" type="submit">Buy Now</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>